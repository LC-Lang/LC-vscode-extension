{
	"Function": {
		"prefix": ["func"],
		"body": [
			"func ${1:name}(${2:params})",
			"    $0",
			"endfunc"
		],
		"description": "snippet for function"
	},

	"if statement": {
		"prefix": "if",
		"body": [
			"if (${1:condition})",
			"    $0",
			"endif"
		],
		"description": "snippet for if statement"
	},
	"if elseif else statement ": {
		"prefix": "if elseif else",
		"body": [
			"if (${1:condition})",
			"    $2",

			"elseif (${3:condition})",
			"    $4",

			"else",
			"    $0",
			"endif\n"
		],
		"description": "snippet for if eleif else statement"
	},
	"if else statement": {
		"prefix": "if else",
		"body": [
			"if (${1:condition})",
			"    $2",

			"else",
			"    $0",
			"endif\n"
		],
		"description": "snippet for if else statement"
	},
	"for loop":{
		"prefix":["for","for loop"],
		"body": [
			"for ${1:i in a}",
			"    $0",
			"endfor"
		]
	},
	"while loop":{
		"prefix":["while","while loop"],
		"body": [
			"while (${1:condition})",
			"    $0",
			"endwhile"
		]
	},
	"import statement":{
		"prefix":["import","#import"],
		"body": [
			"#import ${0:library}"
		]
	},
    "import statement with alias":{
        "prefix":["import","#import"],
        "body": [
            "#import ${0:library} as ${1:alias}"
        ]
    },
    "class":{
        "prefix":["class"],
        "body": [
            "class ${1:name}(${2:params})",
            "    $0",
            "endclass"
        ]
    },
    "class with superclass":{
        "prefix":["class"],
        "body": [
            "class ${1:name}(${2:params}) inherits ${3:superclass}",
            "    $0",
            "endclass\n"
        ]
    },
    "variable with int type":{
        "prefix":"int",
        "body":[
            "int ${1:name} = ${2:value}"
        ]
    },
    "variable with string type":{
        "prefix":"string",
        "body":[
            "string ${1:name} = ${2:value}"
        ]
    },
    "variable with float type":{
        "prefix":"float",
        "body":[
            "float ${1:name} = ${2:value}"
        ]
    },
    "variable with bool type":{
        "prefix":"bool",
        "body":[
            "bool ${1:name} = ${2:value}"
        ]
    },
    "variable with list type":{
        "prefix":"list",
        "body":[
            "list ${1:name} = [$0]"
        ]
    }
}