{
    "name": "lc-lang-support",
    "displayName": "Lambda Code",
    "license": "GPL 3.0",
    "homepage": "https://github.com/LC-Lang/LC-vscode-extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/lc-lang/lc-vscode-extension"
    },
    "icon": "icon.png",
    "description": "Lambda Code language support for VS Code",
    "version": "0.6.0",
    "publisher": "MrinmoyHaloi",
    "engines": {
        "vscode": "^1.59.0"
    },
    "activationEvents": [
        "onLanguage:lc"
    ],
    "main": "./client/out/extension",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "contributes": {
        "languages": [
            {
                "id": "lc",
                "aliases": [
                    "Lambda Code",
                    "lc",
                    "lambdacode",
                    "LC"
                ],
                "extensions": [
                    ".lc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lc",
                "scopeName": "source.lc",
                "path": "./syntaxes/lc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lc",
                "path": "./snippets.json"
            }
        ],
        "configuration": {
            "title": "Lambda Code",
            "properties": {
                "LCLangServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^17.0.17",
        "@types/vscode": "^1.32.0",
        "esbuild": "^0.14.38",
        "typescript": "^4.6.3"
    }
}
