{
  "name": "lc-lang-support",
  "displayName": "Lambda Code",
  "license": "GPL 2.0",
  "homepage": "https://github.com/Lambda-Code-Organization/LC-vscode-extension",
  "repository": "https://github.com/Lambda-Code-Organization/LC-vscode-extension",
  "icon": "icon.png",
  "description": "Lambda Code language support",
  "version": "0.4.0",
  "publisher": "MrinmoyHaloi",
  "engines": {
    "vscode": "^1.59.0"
  },
  "activationEvents": [
    "onLanguage:lc"
  ],
  "main": "extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lc",
        "aliases": [
          "Lambda Code",
          "lc",
          "lambdacode",
          "LC"
        ],
        "extensions": [
          ".lc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lc",
        "scopeName": "source.lc",
        "path": "./syntaxes/lc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lc",
        "path": "./snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.32.0"
  }
}
