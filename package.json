{
    "name": "lc-lang-support",
    "displayName": "Lambda Code",
    "license": "GPL 3.0",
    "homepage": "https://github.com/LC-Lang/LC-vscode-extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/lc-lang/lc-vscode-extension"
    },
    "icon": "icon.png",
    "description": "Lambda Code language support for VS Code",
    "version": "0.5.2",
    "publisher": "MrinmoyHaloi",
    "engines": {
        "vscode": "^1.59.0"
    },
    "activationEvents": [
        "onLanguage:lc"
    ],
    "main": "./out/extension.js",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
    "contributes": {
        "languages": [
            {
                "id": "lc",
                "aliases": [
                    "Lambda Code",
                    "lc",
                    "lambdacode",
                    "LC"
                ],
                "extensions": [
                    ".lc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lc",
                "scopeName": "source.lc",
                "path": "./syntaxes/lc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lc",
                "path": "./snippets.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.17",
        "@types/vscode": "^1.32.0",
        "typescript": "^4.5.5"
    }
}
