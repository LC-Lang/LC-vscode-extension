{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lambda Code",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.lc",
				"match": "\\b(if|while|for|else|elseif|return|func|end)\\b"
			}]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "int|string|float|array"
				}
			]
		},
		"comments":{
			"patterns": [
				{
					"name":"comment.line",
					"match": "//.*"
				}
			]
		}
	},
	"scopeName": "source.lc"
}