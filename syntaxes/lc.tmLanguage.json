{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lambda Code",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#datatypes"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name":"keyword.control.lc",
					"match": "\\b(end|for|while|func|true|false)\\b"
				},
				{
					"name":"keyword.control.flow.lc",
					"match": "\\b(break|continue|return)\\b"
				},
				{
					"name":"keyword.control.conditional.lc",
					"match": "\\b(if|else|elseif|)\\b"
				}
		]
		},
		"datatypes": {
			"patterns": [
				{
					"name": "storage.type.lc",
					"match": "\\b(int|string|float|array)\\b"
				}
			]
		},
		"comments":{
			"patterns": [
				{
					"name":"comment.block",
					"begin": "///",
					"end": "///"
				},
				{
					"name":"comment.line",
					"match": "//.*"
				}
			]
		}
	},
	"scopeName": "source.lc"
}